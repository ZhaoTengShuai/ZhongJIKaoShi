<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".XiangQingActivity"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/Xiang_Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="用户头头像"
        />

<com.recker.flybanner.FlyBanner
    android:id="@+id/Fly"
    android:layout_width="match_parent"
    android:layout_height="300dp"></com.recker.flybanner.FlyBanner>


    <ImageView
        android:id="@+id/Xiang_Image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@mipmap/ic_launcher_round"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/Xiang_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="名称"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/Xiang_Price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="价格"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        />

    <Button
        android:id="@+id/Gou_Btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="加入购物车"
        />
    <Button
        android:id="@+id/Gou_Fen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="分享"
        />
</LinearLayout>